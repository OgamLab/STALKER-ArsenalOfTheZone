<Patch>
   <!--Heavy armor suit-->
   
     <Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Stalker_Apparel_HAS"]/statBases/ArmorRating_Sharp</xpath>
		<value>
			<ArmorRating_Sharp>7.3</ArmorRating_Sharp>
		</value>
	</Operation>

