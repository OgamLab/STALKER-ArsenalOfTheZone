		</value>
	</Operation>
	
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="Stalker_Apparel_HAS"]/statBases</xpath>
		<value>
			<Bulk>15</Bulk>
			<WornBulk>10</WornBulk>
		</value>
	</Operation>
	
   
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="Stalker_Apparel_HAS"]/equippedStatOffsets</xpath>
		<value>
            <CarryWeight>40</CarryWeight>
			<CarryBulk>45</CarryBulk>
