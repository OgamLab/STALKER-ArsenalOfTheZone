<Defs>
 
 <ThingDef ParentName="ApparelMakeableBase">
    <defName>Stalker_Apparel_HAS</defName>
    <label>Heavy armor suit</label>
    <description>A heavy armor suit, which is essentially an exoskeleton underarmor. Its protective parameters are similar to those of a full-fledged exoskeleton, but the lack of servos and batteries does not provide increased strength. On the other hand, it is cheaper to maintain.</description>
    <possessionCount>1</possessionCount>
     <recipeMaker Inherit="False">
     <researchPrerequisite>Heavyarmor</researchPrerequisite>
      <recipeUsers Inherit="False">
		<li>TableMachining</li>
	  </recipeUsers>
      <workSkill>Crafting</workSkill>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <skillRequirements>
        <Crafting>7</Crafting>
      </skillRequirements>
      <displayPriority>520</displayPriority>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/TB/TBIco</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
      <drawSize>1.0</drawSize>
    </graphicData>
	 <costStuffCount>60</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <costList Inherit="False">
      <Plasteel>30</Plasteel>
      <ComponentSpacer>1</ComponentSpacer>
	  <Steel>75</Steel>
      <ComponentIndustrial>4</ComponentIndustrial>
      <Chemfuel>10</Chemfuel>
    </costList>
    <thingCategories>
      <li>ApparelMisc</li>
    </thingCategories>
    <statBases>
      <WorkToMake>38000</WorkToMake>
      <MaxHitPoints>290</MaxHitPoints>
      <Mass>15</Mass>
	   <ArmorRating_Sharp>1.80</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.5</ArmorRating_Blunt>
      <ArmorRating_Heat>0.45</ArmorRating_Heat>
      <Insulation_Cold>1</Insulation_Cold>
      <EquipDelay>15</EquipDelay>
    </statBases>
    <equippedStatOffsets>
	  <MoveSpeed>-0.35</MoveSpeed>
    </equippedStatOffsets>
    <apparel>
	   <tags>
         <li>IndustrialMilitaryBasic</li>
		 <li>HeavyArmor</li>
      </tags>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/TB/TB</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
	   <defaultOutfitTags>
        <li>Stalker</li>
      </defaultOutfitTags>
      <canBeDesiredForIdeo>false</canBeDesiredForIdeo>
      <canBeGeneratedToSatisfyWarmth>false</canBeGeneratedToSatisfyWarmth>
      <canBeGeneratedToSatisfyToxicEnvironmentResistance>false</canBeGeneratedToSatisfyToxicEnvironmentResistance>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(0.33,0.33,0.33)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.65,0.65,0.65)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.4,0.3,0.15)</only>
        </li>
        <li>
