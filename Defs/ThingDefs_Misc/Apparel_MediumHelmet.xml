<?xml version="1.0" encoding="utf-8"?>
<Defs>
 
  <ThingDef ParentName="HatMakeableBase">
    <defName>Stalker_Apparel_ArmorExohelmet</defName><!--Переделать маску для шлема-->
    <label>Exohelmet</label>
    <description>Heavy Exohelmet - When it was part of an exosuit.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/Exohelmet/Exohelmet_item</texPath>
       <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutMultiMask</shaderType>
      <drawSize>0.65</drawSize>
    </graphicData>
    <statBases>
     <WorkToMake>15750</WorkToMake>
      <MaxHitPoints>120</MaxHitPoints>
      <Mass>2</Mass>
	  <StuffEffectMultiplierArmor>0.65</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.4</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.4</StuffEffectMultiplierInsulation_Heat>
      <Flammability>0.4</Flammability>
      <EquipDelay>2</EquipDelay>
    </statBases>
	<equippedStatOffsets>
	  <MoveSpeed>-0.1</MoveSpeed>
    </equippedStatOffsets>
   <recipeMaker>
			<researchPrerequisite>Mediumhelmet</researchPrerequisite>
			<unfinishedThingDef>UnfinishedMask</unfinishedThingDef>
			<recipeUsers Inherit="False">
				<li>TableMachining</li>
			</recipeUsers>
	</recipeMaker>
    <costList Inherit="False">
      <Plasteel>30</Plasteel>
	  <ComponentIndustrial>4</ComponentIndustrial>
	  <Steel>75</Steel>
    </costList>
    <apparel>
      <tags>
	   <li>MediumArmor</li>
       <li>IndustrialMilitaryBasic</li>
	   <li>GasMask</li>
      </tags>
	  <layers>
	   <li>Overhead</li>
      </layers>
      <defaultOutfitTags>
        <li>Stalker</li>
      </defaultOutfitTags>
      <useDeflectMetalEffect>true</useDeflectMetalEffect>
	  <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <scoreOffset>4</scoreOffset>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/Exohelmet/Exohelmet</wornGraphicPath>
      <forceEyesVisibleForRotations>
        <li>1</li>
        <li>2</li>
        <li>3</li>
      </forceEyesVisibleForRotations>
    </apparel>
	<comps>
      <li Class="CompProperties_CauseHediff_Apparel">
        <hediff>WearingPsYGasMask</hediff>
        <part>Head</part>
      </li>
    </comps>
	<colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(0.33,0.33,0.33)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.65,0.65,0.65)</only>
        </li>
        <li>
          <weight>6</weight>
          <min>(0.3,0.3,0.3)</min>
          <max>(0.5,0.5,0.5)</max>
        </li>
      </options>
    </colorGenerator>
	<modExtensions>
			<li Class="RWPaintingTool.PaintableExtension">
				<defaultPalette>
					<colorOne>(79,79,34)</colorOne>
					<colorTwo>(112,135,112)</colorTwo>
					<colorThree>(132,132,192)</colorThree>
				</defaultPalette>
			</li>
	</modExtensions>
	 <researchPrerequisites>
      <li>Mediumhelmet</li>
	  <li>FlakArmor</li>
    </researchPrerequisites>
  </ThingDef>
 
